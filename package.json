{
  "name": "kumo",
  "version": "0.1.0",
  "description": "Cloudflare Workers TUI manager",
  "type": "module",
  "private": true,
  "bin": {
    "kumo": "./src/main.ts"
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "check": "tsgo --noEmit",
    "lint": "oxlint src",
    "fmt": "oxfmt --write src",
    "fmt:check": "oxfmt --check src",
    "build": "bun build --compile --minify --sourcemap ./src/main.ts --outfile kumo",
    "build:linux": "bun build --compile --target=bun-linux-x64 ./src/main.ts --outfile kumo-linux",
    "build:windows": "bun build --compile --target=bun-windows-x64 ./src/main.ts --outfile kumo.exe"
  },
  "dependencies": {
    "gunshi": "0.27.4",
    "@inquirer/prompts": "8.1.0",
    "smol-toml": "1.5.2"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20251219.1",
    "oxlint": "1.34.0",
    "oxfmt": "0.19.0",
    "@types/bun": "1.3.5"
  }
}
